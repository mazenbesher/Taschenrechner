<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.taschenrechner.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/mTextViewFirstNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MMMM" />

        <TextView
            android:id="@+id/mTextViewAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M" />

        <TextView
            android:id="@+id/mTextViewSecondNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MMMM" />

        <TextView
            android:id="@+id/mTextViewEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M" />

        <TextView
            android:id="@+id/mTextViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MMMMM" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/mButtonOne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="1"
            android:text="1" />

        <Button
            android:id="@+id/mButtonTwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="2"
            android:text="2" />

        <Button
            android:id="@+id/mButtonThree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="3"
            android:text="3" />

        <Button
            android:id="@+id/mButtonZero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="0"
            android:text="0" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/mButtonFour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="4"
            android:text="4" />

        <Button
            android:id="@+id/mButtonFive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="5"
            android:text="5" />

        <Button
            android:id="@+id/mButtonSix"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="6"
            android:text="6" />

        <Button
            android:id="@+id/mButtonCE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="0"
            android:text="CE" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/mButtomSeven"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="7"
            android:text="7" />

        <Button
            android:id="@+id/mButtonEight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="8"
            android:text="8" />

        <Button
            android:id="@+id/mButtonNine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickNumberButton"
            android:tag="9"
            android:text="9" />

        <Button
            android:id="@+id/mButtonEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickEqualsButton"
            android:text="=" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/mButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="1"
            android:text="+" />

        <Button
            android:id="@+id/mButtonMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="2"
            android:text="-" />

        <Button
            android:id="@+id/mButtonTimes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="3"
            android:text="*" />

        <Button
            android:id="@+id/mButtonDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="4"
            android:text="/" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/mButtonPower"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickPower"
            android:text="^2" />
        
        <Button
            android:id="@+id/mButtonFak"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickFak"
            android:text="!" />

        <Button
            android:id="@+id/mButtonRest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickActionButton"
            android:tag="5"
            android:text="%" />

    </LinearLayout>

</LinearLayout>
